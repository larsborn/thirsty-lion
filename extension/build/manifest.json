{
  "name": "ThirstyLion",
  "version": "1.0",
  "manifest_version": 2,
  "description": "ThirstyLion SWC detector",
  "short_name": "ThirstyLion",
  "homepage_url": "https://github.com/larsborn/thirsty-lion",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "permissions": [
    "storage",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["inject.css"]
    },
    {
      "matches": ["*://*/*"],
      "js": ["inject.js"]
    }
  ]
}
